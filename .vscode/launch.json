{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (PlatformService)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Microservices/PlatformService/bin/Debug/net6.0/PlatformService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Microservices/PlatformService",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}